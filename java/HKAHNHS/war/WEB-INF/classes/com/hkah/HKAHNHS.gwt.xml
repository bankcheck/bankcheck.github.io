<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='hkahnhs'>
  <!-- Inherit the core Web Toolkit stuff.                        -->
  <servlet path="/query-service" class="com.hkah.server.services.QueryUtilServiceImpl"/>
  <servlet path="/common-service" class="com.hkah.server.services.CommonUtilServiceImpl"/>
  <servlet path="/reportservice" class="com.hkah.server.services.ReportServiceImpl"/>
  <servlet path="/alertservice" class="com.hkah.server.services.AlertServiceImpl"/>
  <servlet path="/crystalreportservice" class="com.hkah.server.services.CrystalReportServiceImpl"/>
  <servlet path="/dayendreportlistservice" class="com.hkah.server.services.DayendReportListServiceImpl"/>
  <servlet path="/getreport" class="com.hkah.server.servlet.GetReport"/>
  <servlet path="/getcrystalreport" class="com.hkah.server.servlet.GetCrystalReport"/>
  <servlet path="/crystalreportviewer" class="com.hkah.server.servlet.CrystalReportViewerServlet"/>
  <servlet path="/signoff" class="com.hkah.server.servlet.UserSignOffServlet"/>

  <inherits name='com.google.gwt.user.User'/>
  <inherits name="com.google.gwt.json.JSON"/>
  <inherits name='com.extjs.gxt.ui.GXT'/>
  <inherits name="com.reveregroup.gwt.imagepreloader.ImagePreloader" />
  <inherits name='org.timepedia.exporter.Exporter'/>
  <set-property name="export" value="yes"/>

  <!-- <inherits name='com.extjs.gxt.desktop.WebDesktop' />       -->

  <!-- Inherit the default GWT style sheet.  You can change       -->
  <!-- the theme of your GWT application by uncommenting          -->
  <!-- any one of the following lines.                            -->
  <inherits name='com.google.gwt.user.theme.standard.Standard'/>
  <!-- <inherits name='com.google.gwt.user.theme.chrome.Chrome'/> -->
  <!-- <inherits name='com.google.gwt.user.theme.dark.Dark'/>     -->

  <!-- Other module inherits                                      -->

  <!-- Specify the app entry point class.                         -->
  <entry-point class='com.hkah.client.MainFrame'/>

  <!-- Specify the paths for translatable code                    -->
  <source path='client'/>
  <source path='shared'/>

  <extend-property name="user.agent" values="ie9, gecko1_8" />
</module>