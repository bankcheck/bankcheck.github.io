	<queryString>
		<![CDATA[SELECT
FR.REQ_NO,
(SELECT CD.CO_DEPARTMENT_DESC FROM CO_DEPARTMENTS CD WHERE FR.CHARGE_TO=CD.CO_DEPARTMENT_CODE) AS DEPTNAME,
(SELECT MEAL_DESC FROM FS_MEAL FM WHERE MEAL_TYPE = 'REQUEST' AND FM.MEAL_ID=FR.REQUEST_TYPE) AS REQTYPE,
TO_CHAR(SERV_DATE_START,'DD/MM/YYYY') AS REQDATE,
(SELECT MEAL_DESC FROM FS_MEAL FM WHERE MEAL_TYPE = 'EVENT' AND FM.MEAL_ID=FR.MEAL_EVENT)||' '||DECODE(FR.MEAL_EVENT,'9',' '||FR.PURPOSE,NULL) AS EVENTTYPE,
NO_OF_PERSON NOOFMEAL,
CHARGE_AMOUNT AS AMT
FROM FS_REQUEST FR
WHERE REQ_STATUS = 'P'
AND TO_CHAR(SERV_DATE_START,'yyyymm') = $P{POSTDATE}
AND (($P{ALLDEPT} ='N' AND FR.CHARGE_TO = $P{CHARGETO}) OR ($P{ALLDEPT} ='Y' OR FR.CHARGE_TO = $P{CHARGETO}))
ORDER BY SERV_DATE_START]]>
