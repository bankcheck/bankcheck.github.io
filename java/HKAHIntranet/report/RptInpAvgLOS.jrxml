	<parameter name="DateStr" class="java.lang.String"/>
	<queryString>
		<![CDATA[SELECT
  WARD "WARD",
  to_char(COUNT(1)) "TOT_NUM_DISCH",
  to_char(SUM(LOS)) "TOT_LOS",
  to_char(ROUND(AVG(LOS), 2)) "AVG_LOS"
FROM
(
SELECT
  W.WRDNAME "WARD",
  R.REGDATE "ADMDATE",
  I.INPDDATE "DISCHAREDATE",
  TRUNC(I.INPDDATE) - TRUNC(R.REGDATE) + 1 "LOS"
  --,I.*
FROM
  REG R LEFT JOIN INPAT I ON I.INPID = R.INPID
  LEFT JOIN BED B ON I.BEDCODE = B.BEDCODE
  LEFT JOIN ROOM RM ON B.ROMCODE = RM.ROMCODE
  LEFT JOIN WARD W ON RM.WRDCODE = W.WRDCODE
WHERE
  I.INPDDATE >= TO_DATE($P{DateStr}, 'DD/MM/YYYY HH24:MI:SS')
  AND I.INPDDATE < ADD_MONTHS(TO_DATE($P{DateStr}, 'DD/MM/YYYY HH24:MI:SS'), 1)
  AND R.REGTYPE = 'I'
  AND R.REGSTS = 'N'
)
GROUP BY WARD]]>
	</queryString>
